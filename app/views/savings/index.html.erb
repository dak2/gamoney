<p style="color: green"><%= notice %></p>

<h1>節約額ランキング</h1>

<div id="savings">
  <table>
    <tr>
      <th>ユーザー名</th>
      <th>合計節約額</th>
    </tr>
    <% @savings.each do |saving| %>
      <tr>
        <td>
          <%= saving.user.name %>
        </td>
        <td>
          <%= saving.money %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @savings %>
</div>

<%= link_to "New saving", new_saving_path %>
